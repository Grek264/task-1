#include <string>
#include <iostream>
#include <locale.h>
#include <algorithm>
#include <vector>
#include<fstream>
#include <chrono>
using namespace std;
int main()
{
    setlocale(LC_ALL, "Russian");
    cout << "hello comrade enter the size of the generated array ->";
    int size, n;
    cin >> size;
    int* arr = new int[size];
    cout << "elements of the generated array before sorting \n";
    for (size_t y = 0; y < size; y++)
    {
        arr[y] = rand();
        cout << y << "-" << arr[y] << "\n";
    }
    auto start =  chrono::high_resolution_clock::now();
    for (size_t i = 1; i < size; i++) 
        for (size_t j = i; j > 0 and arr[j - 1] > arr[j]; j--) 
            swap(arr[j - 1], arr[j]);
        
    auto end = chrono::high_resolution_clock::now();
    cout << "elements of the generated array after sorting \n";
    for (size_t y = 0; y < size; y++)
    {
        cout << y << "-" << arr[y] << "\n";
    }
    chrono::duration<float> duration = end - start;
    cout << "Duration - " << duration.count() << "s" << "\n";
}
